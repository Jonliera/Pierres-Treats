@{
  Layout="_Layout";
}

@model PierreTreats.Models.Treat

<h1>Edit Treat</h1>

<h3>Edit this Treat: @Html.DisplayFor(model => model.TreatType)</h3>

@using(Html.BeginForm())
{
  @Html.LabelFor(model => model.TreatName)
  @Html.TextBoxFor(model => model.TreatName)
  @Html.LabelFor(model => model.TreatType)
  @Html.TextBoxFor(model => model.TreatType)
  <br/>
  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to Flavors List", "Index")</p>
<p>@Html.ActionLink("Treats List", "Index", "Treats")</p>