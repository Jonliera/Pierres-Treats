@{
  Layout="_Layout";
}

@model PierreTreats.Models.Treat

<h4>Add a new Treat</h4>

@using (Html.BeginForm())
{
  <p>@Html.ValidationMessageFor(model => model.TreatName, "", new { @class = "text-danger", @style = "font-weight : 600;" })</p>
  <p>@Html.ValidationMessageFor(model => model.TreatType, "", new { @class = "text-danger", @style = "font-weight : 600;" })</p>

  @Html.LabelFor(model => model.TreatName)
  @Html.TextBoxFor(model => model.TreatName)
  @Html.LabelFor(model => model.TreatType)
  @Html.TextBoxFor(model => model.TreatType)

  <input type="submit" value="Add Treat" class="btn btn-primary" />
}

<p>@Html.ActionLink("Show all Treats", "Index")</p>