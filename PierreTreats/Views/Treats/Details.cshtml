@{
  Layout="_Layout";
}

@model PierreTreats.Models.Treat
@using PierreTreats.Models

<h1>Treat Details</h1>

<hr/>
<h3>@Html.DisplayNameFor(model => model.Name) :@Html.DisplayFor(model => model.Name) </h3>

@if(Model.JoinEntities.Count == 0)
{
<p>This Treat does not have any flavors yet </p>
}
else
{
  <h3>This Treats Flavors: </h3>
  <ul>
    @foreach (TreatFlavor join in Model.JoinEntities)
    {
      <li>@join.Flavor.Name</li>
      @using(Html.BeginForm("DeleteJoin","Treats"))
      {
        @Html.Hidden("joinId", join.TreatFlavorId)
        <input type="submit" value="Delete" class="btn btn-danger"/>
      }
    }
  </ul>
}


<p>@Html.ActionLink("Back to Flavors List", "Index")</p>
<p>@Html.ActionLink("Treats List", "Index", "Treats")</p>
<p>@Html.ActionLink("Add Treat", "Create")</p>
<p>@Html.ActionLink("Edit", "Edit", new { id = Model.TreatId})</p>
<p>@Html.ActionLink("Delete", "Delete", new { id = Model.TreatId})</p>
<p>@Html.ActionLink("Add Flavor", "Add Flavor", new { id = Model.TreatId})</p>


