@{
  Layout = "_Layout";
}

<hr/>
<h2>Welcome to Pierrre's Treats</h2><br><br>

<hr/>

@if(User.Identity.IsAuthenticated)
{
  <p>Hello @User.Identity.Name</p>
  @using (Html.BeginForm("LogOff", "Account")) 
  {
    <input type="submit"class="btn btn-primary" value="Log off" />
    <p>@Html.ActionLink("Home","Index", "Home")</p>
  }
}
  else
  
  {
    <h3>Register or Log In!!!!</h3>
    <p>@Html.ActionLink("Register","Register") | @Html.ActionLink("Log in","Login") | @Html.ActionLink("Home","Index", "Home")</p>
  }

