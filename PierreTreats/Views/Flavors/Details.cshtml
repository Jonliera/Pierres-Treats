@{
  Layout="_Layout";
}

@using PierreTreats.Models
@model PierreTreats.Models.Flavor

<h2>Flavor </h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.FlavorType): @Html.DisplayFor(model => model.FlavorType)</h3>

@if(@Model.JoinEntities.Count == 0)
{
  <p>This flavor is not linked to any treats yet!</p>
}
else
{
  <h4>Treats with this Flavor:</h4>
  <ul>
  @foreach(TreatFlavor join in Model.JoinEntities)
  {
    <li>@join.Treat.TreatType</li>
    @using (Html.BeginForm("DeleteJoin", "Flavors"))
    {
      @Html.Hidden("joinId", @join.TreatFlavorId)
      <input type="submit" value="Delete" />
    }
  }
  </ul>
}

<p>@Html.ActionLink("Back to Flavors List", "Index")</p>
<p>@Html.ActionLink("Treats List", "Index", "Treats")</p>
<p>@Html.ActionLink("Edit Flavor", "Edit", new { id = Model.FlavorId })</p>
<p>@Html.ActionLink("Add a Treat", "AddTreat", new { id = Model.FlavorId })</p>
<p>@Html.ActionLink("Delete flavor", "Delete", new { id = Model.FlavorId })</p>


