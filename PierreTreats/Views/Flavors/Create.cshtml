@{
  Layout="_Layout";
}

@model PierreTreats.Models.Flavor

<h2>Add a Flavor</h2>

@using (Html.BeginForm())
{
  <p>@Html.ValidationMessageFor(model => model.FlavorType, "", new { @style ="font-weight: 600; color: red;"})</p>
  @Html.LabelFor(model => model.FlavorType)
  @Html.TextBoxFor(model => model.FlavorType)

  <input type="submit" value="Add new Flavor" />

}

<p>@Html.ActionLink("Show all Flavors", "Index")</p>